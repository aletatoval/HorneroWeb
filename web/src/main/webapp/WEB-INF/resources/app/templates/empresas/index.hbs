{{view "barraAcciones"}}
{{view "filtros" modelo="Empresa"}}
<div class="table-responsive col m12 hide-on-med-and-down">
  <table class="striped">
    <thead>
      <tr>
        <th>{{view "tituloColumna" nombre="nombre"}}</th>
        <th>{{view "tituloColumna" nombre="alias"}}</th>
        <th>{{view "tituloColumna" nombre="email"}}</th>
        <th>{{view "tituloColumna" nombre="telefono"}}</th>
        <th>{{view "tituloColumna" nombre="ruc"}}</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each empresa in model}}
       {{#view "filaTabla" modelo=empresa}}
          <td>{{empresa.nombre}}</td>
          <td>{{empresa.alias}}</td>
          <td>{{empresa.email}}</td>
          <td>{{empresa.telefono}}</td>
          <td>{{empresa.ruc}}</td>
          <td>
            {{#if empresa.esActivo}}
              {{#link-to "empresa" empresa class="btn btn-xs teal" }} <i class="icon icon-eye tooltipped" data-position="bottom" data-delay="25" data-tooltip="Abrir"></i> {{/link-to}}
              {{#link-to "empresa.edit" empresa class="btn btn-xs teal" }} <i class="icon icon-pencil tooltipped" data-position="bottom" data-delay="25" data-tooltip="Editar"></i> {{/link-to}}
              {{#link-to "empresa.modulos" empresa class="btn btn-xs teal" }} <i class="icon icon-window tooltipped" data-position="bottom" data-delay="25" data-tooltip="Gestionar módulos"></i> {{/link-to}}
              {{#link-to "empresa.roles" empresa class="btn btn-xs teal"}} <i class="icon icon-vcard tooltipped" data-position="bottom" data-delay="25" data-tooltip="Ver roles"></i>{{/link-to}}
                <button class="btn btn-xs teal tooltipped" data-position="bottom" data-delay="25" data-tooltip="Desactivar"{{action 'desactivar' target='view'}}>
                  <i class="icon icon-cancel"></i>
                </button>
              {{else}}
                <button class="btn btn-xs teal tooltipped" data-position="bottom" data-delay="25" data-tooltip="Activar"{{action 'activar' target='view'}}>
                  <i class="icon icon-check"></i>
              </button>
            {{/if}}
          </td>
        {{/view}}
      {{/each}}
    </tbody>
  </table>
</div>
<div class="row show-xs show-sm hide-on-large-only">
  {{#each empresa in model}}
    <div class="col s12 m4">
      <div class="panel">
        <div class="panel-heading">
          <h3>{{#link-to "empresa" empresa}} {{empresa.nombre}} {{/link-to}}</h3>
        </div>
        <div class="panel-body">
          <p><strong>Email</strong>
            <i class="fa fa-fw fa-envelope"></i>
            {{empresa.email}}
          </p>
          <p><strong>Alias</strong>
            <i class="fa fa-fw fa-info"></i>
            {{empresa.alias}}
          </p>
          <p><strong>Telefono</strong>
            <i class="fa fa-fw fa-phone"></i>
            {{empresa.telefono}}
          </p>
          <p><strong>RUC</strong>
            <i class="fa fa-fw fa-info"></i>
            {{empresa.ruc}}
          </p>
        </div>
        <div class="panel-footer footer-panel-lista">
          <div class="btn-group btn-group-lg btn-group-justified" role="group" aria-label="...">
            {{#link-to "empresa" empresa class="btn teal darken-2"  title="Abrir"}} <i class="icon icon-eye"></i> {{/link-to}}
            {{#link-to "empresa.edit" empresa class="btn teal darken-2"  title="Editar"}} <i class="icon icon-pencil"></i> {{/link-to}}
            {{#link-to "empresa.modulos" empresa class="btn teal darken-2"  title="Gestionar módulos"}} <i class="fa fa-stack-overflow"></i> {{/link-to}}
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>

<div class="row">
  {{view "paginador"}}
</div>
