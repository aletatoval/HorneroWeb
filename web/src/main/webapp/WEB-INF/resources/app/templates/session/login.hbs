<div class="login col m3">
  <div class="well text-center">
    <div class="row">
      <div class="col m4 text-center">
        <img src="images/tgn_blanco.svg" class="img-responsive">
      </div>
    </div>
    <br>
  <form autocomplete="off" id="form_login" class="text-right">
    <div class="input-field">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span> 
        {{view Ember.TextField valueBinding="alias" name="j_username" placeholder="usuario" class="form-control input-lg" required="true"}}
      </div>
    </div>

    <div class="input-field">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span> 
        {{view Ember.TextField valueBinding="clave" name="j_password" placeholder="contrase√±a" type="password" class="form-control input-lg" required="true"}}
      </div>
    </div>

    <div class="input-field">
      <button {{action 'login'}} class="btn btn-lg orange darken-4 btn-block">Ingresar</button>
    </div>
  </form>
</div>
</div>
<div class="login fondo"></div>