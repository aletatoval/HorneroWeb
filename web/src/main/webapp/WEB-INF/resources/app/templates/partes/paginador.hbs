{{#if view.pages}}
	<div class="row center">
		<ul class="pagination">
			<li {{bind-attr class="view.disablePrev:disabled"}}>
				<a {{action "anterior" target="view"}}>
					<i class="fa fa-angle-double-left"></i>
				</a>
			</li>
				{{#each page in view.pages}}
					{{#view "botonPaginador" content=page}}
						<a class="waves-effect" {{action "ir" page target="view"}}>{{page}}</a>
					{{/view}}
				{{/each}}
			<li {{bind-attr class="view.disableNext:disabled"}}>
				<a {{action "siguiente"  target="view"}}>
					<i class="fa fa-angle-double-right"></i>
				</a>
			</li>
		</ul>
	</div>
	{{else}}
		<div class="row">
		<ul class="pagination">
			<li class="disabled">
				<a class="disabled">
					<i class="fa fa-angle-double-left"></i>
				</a>
			</li>
				<a class="waves-effect">1</a>
			<li class="disabled">
				<a class="disabled">
					<i class="fa fa-angle-double-right"></i>
				</a>
			</li>
		</ul>
	</div>
{{/if}}