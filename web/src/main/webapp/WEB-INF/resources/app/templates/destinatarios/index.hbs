{{view "barraAcciones"}}
<div class="table-responsive col m12 hide-on-med-and-down">
  <table class="striped">
    <thead>
      <tr>
        <th>{{view "tituloColumna" nombre="nombre"}}</th>
        <th>{{view "tituloColumna" nombre="destinatario"}}</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each destinatario in model}}
        {{#view "filaTabla" modelo=destinatario}}
          <td>
            {{destinatario.nombre}}
          </td>
          <td>
            {{destinatario.destinatario}}
          </td>
          <td class="right-align">
            {{#if destinatario.esActivo}}
              {{#link-to "destinatario.edit" destinatario class="btn btn-xs orange darken-4"  title="Editar"}} <i class="fa fa-fw fa-pencil"></i> {{/link-to}}
              <button class="btn btn-xs orange darken-4" title="Desactivar" {{action 'desactivar' target='view'}}>
                <i class="fa fa-fw fa-trash-o"></i></button>
            {{else}}
             <button class="btn btn-xs teal darken-2 tooltipped" data-position="bottom" data-delay="25" data-tooltip="Activar"{{action 'activar' target='view'}}>
                 <i class="icon icon-check"></i>
              </button>
              {{/if}}
          </td>
        {{/view}}
      {{/each}}
    </tbody>
  </table>
</div>
<div class="row show-xs show-sm hide-on-large-only">
  {{#each destinatario in model}}
    <div class="col s12 m4">
      <div class="panel">
        <div class="panel-heading">
          <h3>{{#link-to "destinatario" destinatario}} {{destinatario.nombre}} {{/link-to}}</h3>
        </div>
          
      </div>
    </div>
  {{/each}}
</div>